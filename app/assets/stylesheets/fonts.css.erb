@font-face {
    font-family: "bitterbold";
    src: url('<%= asset_path('bitter-bold-webfont.eot') %>');
    src: url('<%= asset_path('bitter-bold-webfont.eot?#iefix') %>') format("embedded-opentype"),
         url('<%= asset_path('bitter-bold-webfont.woff') %>') format("woff"),
         url('<%= asset_path('bitter-bold-webfont.ttf') %>') format("truetype"),
         url('<%= asset_path('bitter-bold-webfont.svg#bitterbold') %>') format("svg");
    font-weight: normal;
    font-style: normal;

}

